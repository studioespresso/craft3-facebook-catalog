{% import "_includes/forms" as forms %}

{% set installed = craft.app.plugins.isPluginInstalled('commerce') %}

{% if installed %}
    <h2>{{ 'Feed url' }}</h2>
    {{ forms.textField({
        label: 'Enter a URL for your products feed',
        id: 'productsFeed',
        name: 'productsFeed',
        value: settings['productsFeed']}) }}

    <h2>{{ 'Map your product fields'|t('facebook-catalog') }}</h2>
    <p>{{ 'Note that each of these fields (for each product) are required for your Facebook Catalog to be valid.'|t('facebook-catalog') }}</p>
    {% set availableFields = {
        '' : '---',
        'title' : 'Title',
        'sku' : 'SKU'
    } %}
    {% for id, field in fields %}
        {% set availableFields = availableFields|merge([{
            'label': field.name,
            'value': field.handle
        }]) %}
    {% endfor %}
    {{ forms.selectField({
        label: "Product id"|t('facebook-catalog'),
        id: "id",
        name: "id",
        required: true,
        options: availableFields,
        value: settings['id'] ? settings['id'] : 'sku',
        errors: settings.errors and settings.errors['id'] ? settings.errors['id']
    }) }}

    {{ forms.selectField({
        label: "Product title"|t('facebook-catalog'),
        id: "title",
        name: "title",
        required: true,
        options: availableFields,
        value: settings['title'] ? settings['title'] : 'title',
        errors: settings.errors and settings.errors['title'] ? settings.errors['title']
    }) }}

    {{ forms.selectField({
        label: "Product description"|t('facebook-catalog'),
        id: "description",
        name: "description",
        required: true,
        options: availableFields,
        value: settings['description'],
        errors: settings.errors and settings.errors['description'] ? settings.errors['description']
    }) }}

    {{ forms.selectField({
        label: "Image field"|t('facebook-catalog'),
        id: "image_link",
        name: "image_link",
        required: true,
        options: availableFields,
        value: settings['image_link'],
        errors: settings.errors and settings.errors['image_link'] ? settings.errors['image_link']
    }) }}


    {% if craft.commerce.paymentCurrencies.getAllPaymentCurrencies()|length > 1 %}
        {% set currencies = [] %}
        {% for currency in craft.commerce.paymentCurrencies.getAllPaymentCurrencies() %}
            {% set currencies = currencies|merge([{
                'label': currency.iso,
                'value': currency.iso
            }]) %}
        {% endfor %}
        {{ forms.selectField({
            label: "Image field"|t('facebook-catalog'),
            id: "currencyIso",
            name: "currencyIso",
            required: true,
            options: currencies,
            value: settings['currencyIso'],
            errors: settings.errors and settings.errors['currencyIso'] ? settings.errors['currencyIso']
        }) }}
    {% endif %}
{% else %}
    <h2>{{ 'Craft Commerce not installed'|t }}</h2>
{% endif %}
